{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "chrome",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}